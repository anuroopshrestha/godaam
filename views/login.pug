extends layout-unsecure

block content
	#login_wrapper
		block messages
			if locals.flashes
				#toast-wrap(style="margin-top: 15px;position: absolute;top: 0;left: 30px;right: 30px;")
					.row
						.col-sm
							- categories = Object.keys(locals.flashes)
								each category in categories
									each message in locals.flashes[category]
										div(class=`toast toast-${category}`)
											._message #{message}
											span.closeToast
												i.ti-close
		#login-form
			h2= title
			#login-inner
				form.basic-form(action="/login", method="POST")
					.control-row
						input(type="text", name="email", placeholder="Email", required)
					.control-row
						input(type="password", placeholder="Password", name="password", required)
					.control-row
						input.btn.btn-primary(type="submit", value="Login")

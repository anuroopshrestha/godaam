extends ../layout

block content
  .page-title
    h1 #{title}
  .card-row
    .card
      .card-title All Locations
      if locations.length < 1
        p No locations found
      else
        table.striped
          tr
            th S. No.
            th Name
            th
            th Address
            if user.role === 0
              th Store
            th Products
          each location, i in locations
            tr
              td #{i+1}
              td #{location.name}
              td
                span.edit-cell
                  ul.list-inline
                    li
                      a(href=`/location/${location._id}` title="Edit")
                        span.ti-pencil
                    li
                      a(href=`/location/del/${location._id}` title="Delete")
                        span.ti-trash
              td #{location.location.address}
              if user.role === 0
                td #{location.store.store.name}
              td
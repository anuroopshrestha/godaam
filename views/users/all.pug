extends ../layout

block content
  .page-title
    h1 Users
  .card-row
    .card
      .card-title All Users
      if users.length < 1
        p No users found
      else
        table.striped
          tr
            th S. No.
            th Name
            th Store
            th Location
            th Email
          each user, i in users
            tr
              td #{i+1}
              td #{user.name}
              td #{user.store.name}
              td #{user.store.location.address}
              td #{user.email}

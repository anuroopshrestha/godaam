extends ../layout

block content
  .page-title
    h1 Users
  .card-row
    .card
      .card-title All Users
      if users.length < 1
        p No users found
      else
        table.striped
          tr
            th S. No.
            th Name
            th
            th Email
          each user, i in users
            tr
              td #{i+1}
              td #{user.name}
              td
                span.edit-cell
                  ul.list-inline
                    li
                      a(href=`/user/${user._id}` title="Edit")
                        span.ti-pencil
                    li
                      a(href=`/user/del/${user._id}` title="Delete")
                        span.ti-trash
              td #{user.email}
            
